# EZSell Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
PROJECT_NAME=EZSell
PROJECT_VERSION=1.0.0
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./ezsell.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@localhost/ezsell

# Google OAuth (Optional - for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Email (Optional - for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@ezsell.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080

# File Upload
MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png

# ML Models
MODEL_PATH=./trained_models
ENABLE_PRICE_PREDICTION=true

# AR Features
AR_ENABLED=true
AR_PREVIEW_PATH=./data/ar_previews

# Development
DEBUG=true
RELOAD=true

# Production Settings (set these in production)
# DEBUG=false
# RELOAD=false
# DATABASE_URL=postgresql://...
# FRONTEND_URL=https://yourdomain.com
